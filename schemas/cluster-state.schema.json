{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/cluster-state.schema.json",
  "title": "Arbiter Online Clustering Records",
  "oneOf": [
    { "$ref": "#/$defs/state_snapshot" },
    { "$ref": "#/$defs/assignment_record" }
  ],
  "$defs": {
    "cluster": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cluster_id", "size", "centroid"],
      "properties": {
        "cluster_id": { "type": "string", "minLength": 1 },
        "size": { "type": "integer", "minimum": 1 },
        "centroid": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 1
        }
      }
    },
    "state_snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "record_type",
        "run_id",
        "updated_at",
        "algorithm",
        "threshold_tau",
        "centroid_update_rule",
        "clusters"
      ],
      "properties": {
        "record_type": { "const": "state_snapshot" },
        "run_id": { "type": "string", "minLength": 1 },
        "updated_at": { "type": "string", "format": "date-time" },
        "algorithm": { "type": "string", "enum": ["leader"] },
        "threshold_tau": { "type": "number", "minimum": 0, "maximum": 1 },
        "centroid_update_rule": {
          "type": "string",
          "enum": ["fixed_leader", "incremental_mean"]
        },
        "clusters": {
          "type": "array",
          "items": { "$ref": "#/$defs/cluster" }
        }
      }
    },
    "assignment_record": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "record_type",
        "trial_id",
        "cluster_id",
        "similarity",
        "created_new_cluster"
      ],
      "properties": {
        "record_type": { "const": "assignment" },
        "trial_id": { "type": "integer", "minimum": 0 },
        "cluster_id": { "type": "string", "minLength": 1 },
        "similarity": { "type": "number", "minimum": -1, "maximum": 1 },
        "created_new_cluster": { "type": "boolean" },
        "algorithm": { "type": "string", "enum": ["leader"] },
        "threshold_tau": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  }
}
