{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/catalog.schema.json",
  "title": "Arbiter Model Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "catalog_version",
    "catalog_stage",
    "metadata_complete",
    "models"
  ],
  "properties": {
    "schema_version": { "const": "1.0.0" },
    "catalog_version": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "catalog_stage": { "type": "string", "enum": ["dev", "curated", "research"] },
    "metadata_complete": { "type": "boolean" },
    "models": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "slug",
          "display_name",
          "provider",
          "context_window",
          "is_aliased"
        ],
        "properties": {
          "slug": { "type": "string", "minLength": 1 },
          "display_name": { "type": "string", "minLength": 1 },
          "provider": { "type": "string", "minLength": 1 },
          "context_window": { "type": ["integer", "null"], "minimum": 0 },
          "is_aliased": { "type": ["boolean", "null"] },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
