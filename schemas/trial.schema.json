{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/trial.schema.json",
  "title": "Arbiter Trial Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "trial_id",
    "status",
    "protocol",
    "assigned_config",
    "requested_model_slug",
    "actual_model"
  ],
  "$defs": {
    "decode_params": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "temperature": { "type": "number" },
        "top_p": { "type": "number" },
        "max_tokens": { "type": "integer" },
        "presence_penalty": { "type": "number" },
        "frequency_penalty": { "type": "number" }
      }
    },
    "role_assignment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["model_slug", "persona_id"],
      "properties": {
        "model_slug": { "type": "string", "minLength": 1 },
        "persona_id": { "type": ["string", "null"], "minLength": 1 },
        "decode": { "$ref": "#/$defs/decode_params" }
      }
    },
    "call_record": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "call_index",
        "turn",
        "role",
        "model_requested",
        "model_actual",
        "request_payload",
        "response_payload",
        "attempt",
        "error_message"
      ],
      "properties": {
        "call_index": { "type": "integer", "minimum": 0 },
        "turn": { "type": "integer", "minimum": 0 },
        "role": { "type": "string", "enum": ["proposer", "critic"] },
        "model_requested": { "type": "string", "minLength": 1 },
        "model_actual": { "type": ["string", "null"] },
        "request_payload": { "type": "object" },
        "response_payload": { "type": ["object", "null"] },
        "attempt": {
          "type": "object",
          "additionalProperties": false,
          "required": ["started_at", "completed_at", "latency_ms", "retry_count"],
          "properties": {
            "started_at": { "type": "string", "format": "date-time" },
            "completed_at": { "type": "string", "format": "date-time" },
            "latency_ms": { "type": "integer", "minimum": 0 },
            "retry_count": { "type": "integer", "minimum": 0 }
          }
        },
        "error_message": { "type": ["string", "null"] }
      }
    },
    "transcript_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["turn", "role", "content"],
      "properties": {
        "turn": { "type": "integer", "minimum": 0 },
        "role": { "type": "string", "enum": ["proposer", "critic"] },
        "content": { "type": "string" }
      }
    }
  },
  "properties": {
    "trial_id": { "type": "integer", "minimum": 0 },
    "requested_model_slug": { "type": "string", "minLength": 1 },
    "actual_model": { "type": ["string", "null"] },
    "protocol": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["success", "error", "model_unavailable", "timeout_exhausted"]
    },
    "assigned_config": {
      "type": "object",
      "additionalProperties": false,
      "required": ["model", "persona", "protocol"],
      "properties": {
        "model": { "type": "string", "minLength": 1 },
        "persona": { "type": "string", "minLength": 1 },
        "protocol": { "type": "string", "minLength": 1 },
        "decode": { "$ref": "#/$defs/decode_params" }
      }
    },
    "attempt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "latency_ms": { "type": "integer", "minimum": 0 },
        "retry_count": { "type": "integer", "minimum": 0 }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "message": { "type": "string" },
        "code": { "type": "string" },
        "retryable": { "type": "boolean" }
      }
    },
    "error_code": { "type": ["string", "null"] },
    "raw_assistant_text": { "type": "string" },
    "request_payload": { "type": "object" },
    "response_payload": { "type": "object" },
    "role_assignments": {
      "type": "object",
      "additionalProperties": false,
      "required": ["proposer", "critic"],
      "properties": {
        "proposer": { "$ref": "#/$defs/role_assignment" },
        "critic": { "$ref": "#/$defs/role_assignment" }
      }
    },
    "calls": {
      "type": "array",
      "items": { "$ref": "#/$defs/call_record" }
    },
    "transcript": {
      "type": "array",
      "items": { "$ref": "#/$defs/transcript_entry" }
    },
    "metadata": { "type": "object" }
  }
}
