{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/trial.schema.json",
  "title": "Arbiter Trial Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "trial_id",
    "status",
    "protocol",
    "assigned_config",
    "requested_model_slug",
    "actual_model"
  ],
  "$defs": {
    "decode_params": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "temperature": {
          "type": "number"
        },
        "top_p": {
          "type": "number"
        },
        "max_tokens": {
          "type": "integer"
        },
        "presence_penalty": {
          "type": "number"
        },
        "frequency_penalty": {
          "type": "number"
        }
      }
    },
    "usage_stats": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prompt_tokens",
        "completion_tokens",
        "total_tokens"
      ],
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "cost": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "role_assignment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "model_slug",
        "persona_id"
      ],
      "properties": {
        "model_slug": {
          "type": "string",
          "minLength": 1
        },
        "persona_id": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "decode": {
          "$ref": "#/$defs/decode_params"
        }
      }
    },
    "call_record": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "call_index",
        "turn",
        "role",
        "model_requested",
        "model_actual",
        "request_payload",
        "response_payload",
        "attempt",
        "error_message"
      ],
      "properties": {
        "call_index": {
          "type": "integer",
          "minimum": 0
        },
        "turn": {
          "type": "integer",
          "minimum": 0
        },
        "role": {
          "type": "string",
          "minLength": 1
        },
        "model_requested": {
          "type": "string",
          "minLength": 1
        },
        "model_actual": {
          "type": [
            "string",
            "null"
          ]
        },
        "request_payload": {
          "type": "object"
        },
        "response_payload": {
          "type": [
            "object",
            "null"
          ]
        },
        "usage": {
          "$ref": "#/$defs/usage_stats"
        },
        "attempt": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "started_at",
            "completed_at",
            "latency_ms",
            "retry_count"
          ],
          "properties": {
            "started_at": {
              "type": "string",
              "format": "date-time"
            },
            "completed_at": {
              "type": "string",
              "format": "date-time"
            },
            "latency_ms": {
              "type": "integer",
              "minimum": 0
            },
            "retry_count": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "error_message": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "transcript_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "turn",
        "role",
        "content"
      ],
      "properties": {
        "turn": {
          "type": "integer",
          "minimum": 0
        },
        "role": {
          "type": "string",
          "minLength": 1
        },
        "content": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "trial_id": {
      "type": "integer",
      "minimum": 0
    },
    "requested_model_slug": {
      "type": "string",
      "minLength": 1
    },
    "actual_model": {
      "type": [
        "string",
        "null"
      ]
    },
    "protocol": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "success",
        "error",
        "model_unavailable",
        "timeout_exhausted"
      ]
    },
    "assigned_config": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "model",
        "persona",
        "protocol"
      ],
      "properties": {
        "model": {
          "type": "string",
          "minLength": 1
        },
        "persona": {
          "type": "string",
          "minLength": 1
        },
        "protocol": {
          "type": "string",
          "minLength": 1
        },
        "decode": {
          "$ref": "#/$defs/decode_params"
        }
      }
    },
    "attempt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "completed_at": {
          "type": "string",
          "format": "date-time"
        },
        "latency_ms": {
          "type": "integer",
          "minimum": 0
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "message": {
          "type": "string"
        },
        "code": {
          "type": [
            "string",
            "null"
          ]
        },
        "retryable": {
          "type": "boolean"
        }
      }
    },
    "error_code": {
      "type": [
        "string",
        "null"
      ]
    },
    "raw_assistant_text": {
      "type": "string"
    },
    "request_payload": {
      "type": "object"
    },
    "response_payload": {
      "type": "object"
    },
    "role_assignments": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "patternProperties": {
        "^[A-Z][A-Z0-9_]*$": {
          "$ref": "#/$defs/role_assignment"
        }
      }
    },
    "calls": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/call_record"
      }
    },
    "transcript": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/transcript_entry"
      }
    },
    "metadata": {
      "type": "object"
    },
    "usage": {
      "$ref": "#/$defs/usage_stats"
    },
    "parsed": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "parse_status",
        "parser_version"
      ],
      "properties": {
        "parse_status": {
          "type": "string",
          "enum": [
            "success",
            "fallback",
            "failed"
          ]
        },
        "parser_version": {
          "type": "string",
          "minLength": 1
        },
        "extraction_method": {
          "type": "string"
        },
        "embed_text_source": {
          "type": "string"
        },
        "confidence": {
          "type": [
            "string",
            "null"
          ]
        },
        "outcome": {
          "type": "string"
        },
        "rationale": {
          "type": "string"
        },
        "embed_text": {
          "type": "string"
        },
        "parse_error": {
          "type": "object"
        }
      }
    },
    "embedding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "success",
            "failed",
            "skipped"
          ]
        },
        "generation_id": {
          "type": "string"
        },
        "skip_reason": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      }
    },
    "grouping": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "embedding_group_id": {
          "type": "integer",
          "minimum": 0
        },
        "similarity_to_exemplar": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
