{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/contract-manifest.schema.json",
  "title": "Arbiter Decision Contract Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "hash_algorithm", "entries"],
  "properties": {
    "schema_version": { "const": "1.0.0" },
    "hash_algorithm": { "const": "sha256" },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "path", "sha256"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "description": { "type": "string" }
        }
      }
    }
  }
}
