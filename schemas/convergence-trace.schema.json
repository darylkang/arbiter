{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/convergence-trace.schema.json",
  "title": "Arbiter Convergence Trace Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "batch_number",
    "k_attempted",
    "k_eligible",
    "novelty_rate",
    "mean_max_sim_to_prior",
    "stop"
  ],
  "properties": {
    "batch_number": { "type": "integer", "minimum": 0 },
    "k_attempted": { "type": "integer", "minimum": 0 },
    "k_eligible": { "type": "integer", "minimum": 0 },
    "novelty_rate": { "type": "number", "minimum": 0, "maximum": 1 },
    "mean_max_sim_to_prior": { "type": "number", "minimum": 0, "maximum": 1 },
    "cluster_count": { "type": "integer", "minimum": 0 },
    "new_clusters_this_batch": { "type": "integer", "minimum": 0 },
    "largest_cluster_share": { "type": "number", "minimum": 0, "maximum": 1 },
    "cluster_distribution": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9]+$": { "type": "integer", "minimum": 0 }
      }
    },
    "js_divergence": { "type": ["number", "null"], "minimum": 0 },
    "entropy": { "type": "number", "minimum": 0 },
    "effective_cluster_count": { "type": "number", "minimum": 0 },
    "singleton_count": { "type": "integer", "minimum": 0 },
    "recorded_at": { "type": "string", "format": "date-time" },
    "stop": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "would_stop", "should_stop"],
      "properties": {
        "mode": { "type": "string", "enum": ["advisor", "enforcer"] },
        "would_stop": { "type": "boolean" },
        "should_stop": { "type": "boolean" },
        "stop_reason": { "type": "string" }
      }
    }
  }
}
