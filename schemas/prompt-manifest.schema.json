{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arbiter.dev/schemas/v1/prompt-manifest.schema.json",
  "title": "Arbiter Prompt Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "hash_algorithm", "entries"],
  "properties": {
    "schema_version": { "const": "1.0.0" },
    "hash_algorithm": { "const": "sha256" },
    "prompt_bank_stage": { "type": "string", "enum": ["dev", "curated", "research"] },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "path", "sha256"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": [
              "participant_persona",
              "participant_protocol_template",
              "instrument_prompt"
            ]
          },
          "path": { "type": "string", "minLength": 1 },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "description": { "type": "string" }
        }
      }
    }
  }
}
